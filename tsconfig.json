{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "listEmittedFiles": true,
    "types": [
      "node"
    ]
  },
  "exclude": [
    "./test",
    "./bin",
    "./src"
  ],
  "include": [
    "./lib"
  ]
}
